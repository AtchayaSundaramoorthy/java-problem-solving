class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        // Step 1: Find the current maximum candies any kid has
        int max = 0;
        for(int candy : candies) {
            max = Math.max(max, candy);
        }

        // Step 2: Check for each kid if they can have the maximum candies
        List<Boolean> res = new ArrayList<>();
        for(int candy : candies) {
            // If current kidâ€™s candies + extraCandies >= max, they can have the most candies
            res.add(candy + extraCandies >= max);
        }

        // Step 3: Return the results list
        return res;
    }
}
